<Window x:Class="sunshineDentalAAF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sunshineDentalAAF"
        mc:Ignorable="d"
        Title="MainWindow" Height="428" Width="860">
    <Grid Margin="0,0,0,-6">
        <TabControl HorizontalAlignment="Center" Height="398" VerticalAlignment="Center" Width="840">
            <TabItem Header="Összes időpont" FontFamily="Bahnschrift" FontWeight="Bold">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="datagrid" HorizontalAlignment="Left" Height="178" Margin="38,25,0,0" VerticalAlignment="Top" Width="770" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" ItemsSource="{Binding YourData}" FontFamily="Bahnschrift" Background="#FFDEDEDE" Foreground="Black" FontSize="14">
                        <DataGrid.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </DataGrid.BorderBrush>
                        <DataGrid.Effect>
                            <DropShadowEffect/>
                        </DataGrid.Effect>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Orvos neve" Binding="{Binding nev}" />
                            <DataGridTextColumn Header="Szakrendelés" Binding="{Binding szak_nev}" />
                            <DataGridTextColumn Header="Dátum" Binding="{Binding if_datum, StringFormat=\{0:yyyy-MM-dd\}}" />
                            <DataGridTextColumn Header="Időpont" Binding="{Binding if_idopont}" />
                            <DataGridTextColumn Header="Név" Binding="{Binding if_nev}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding if_email}" />
                            <DataGridTextColumn Header="Telefon" Binding="{Binding if_telefon}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox x:Name="cbkereses" HorizontalAlignment="Left" Height="28" Margin="42,239,0,0" VerticalAlignment="Top" Width="134" SelectionChanged="Cbkereses_SelectionChanged" FontFamily="Bahnschrift" FontSize="14">
                        <ComboBox.Effect>
                            <DropShadowEffect/>
                        </ComboBox.Effect>
                    </ComboBox>
                    <Button x:Name="osszesGomb" Content="Összes szakrendelés mutatása" HorizontalAlignment="Left" Height="28" Margin="207,239,0,0" VerticalAlignment="Top" Width="219" Click="osszesGomb_Click" FontWeight="Bold" FontFamily="Bahnschrift" FontSize="14">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Időpont törlése" HorizontalAlignment="Left" Height="28" Margin="668,239,0,0" VerticalAlignment="Top" Width="140" Background="#FFF36A6A" Click="Button_Click" FontSize="14">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="regebbiIdopontok" Content="Lejárt dátumok mutatása" HorizontalAlignment="Left" Height="28" Margin="442,239,0,0" VerticalAlignment="Top" Width="178" Click="regebbiIdopontok_Click" FontWeight="Bold" FontSize="14">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="frissitesButton" Content="Frissítés" HorizontalAlignment="Left" Height="27" Margin="48,301,0,0" VerticalAlignment="Top" Width="113" Click="frissitesButton_Click" FontWeight="Bold" FontSize="14" Background="#FFDDDDDD">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Aktuális időpont" FontFamily="Bahnschrift" FontWeight="Bold">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26*"/>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="722*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="datagrid2" HorizontalAlignment="Left" Height="178" Margin="12,25,0,0" VerticalAlignment="Top" Width="770" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" ItemsSource="{Binding YourData}" FontFamily="Bahnschrift" Background="#FFDEDEDE" Foreground="Black" FontSize="14" Grid.ColumnSpan="3" Grid.Column="1">
                        <DataGrid.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </DataGrid.BorderBrush>
                        <DataGrid.Effect>
                            <DropShadowEffect/>
                        </DataGrid.Effect>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Orvos neve" Binding="{Binding nev}" />
                            <DataGridTextColumn Header="Szakrendelés" Binding="{Binding szak_nev}" />
                            <DataGridTextColumn Header="Dátum" Binding="{Binding if_datum, StringFormat=\{0:yyyy-MM-dd\}}" />
                            <DataGridTextColumn Header="Időpont" Binding="{Binding if_idopont}" />
                            <DataGridTextColumn Header="Név" Binding="{Binding if_nev}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding if_email}" />
                            <DataGridTextColumn Header="Telefon" Binding="{Binding if_telefon}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
